<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.poo.proyectosameday.viewController.UpdateDealerModalViewController"
      styleClass="modal-box"
      alignment="CENTER"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Actualizar Usuario" styleClass="modal-title"/>

    <TextField styleClass="text-field" fx:id="txtNombre" promptText="Nombre completo"/>
    <TextField styleClass="text-field" fx:id="txtTelefono" promptText="Número de teléfono"/>

    <HBox spacing="10" alignment="CENTER" styleClass="modal-footer">
        <padding>
            <Insets top="10"/>
        </padding>
        <Button text="Guardar" onAction="#onSave" styleClass="primary-btn"/>
        <Button text="Cancelar" onAction="#onCancel" styleClass="secondary-btn"/>
    </HBox>

</VBox>
