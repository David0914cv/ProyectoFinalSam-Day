<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.proyectosameday.viewController.FormUpdateViewController"
            spacing="20" alignment="CENTER">

    <Label text="Actualizar Información Personal" styleClass="section-title"/>

    <GridPane hgap="15" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="100"/>
            <ColumnConstraints halignment="LEFT" minWidth="250"/>
        </columnConstraints>

        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nombreField" promptText="Nombre completo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Correo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="correoField" promptText="Correo electrónico" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Teléfono:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="telefonoField" promptText="Teléfono" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Guardar Cambios" styleClass="primary-btn" onAction="#onGuardar"/>

</VBox>
