<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<BorderPane prefHeight="504.0" prefWidth="720.0" styleClass="contentForm" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.proyectosameday.viewController.SendingUserViewController">

    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="form-box">

            <!-- Título -->
            <Label fx:id="lblTitle" styleClass="form-title" text="Realizar Envío" />

            <!-- Formulario de cotización -->
            <GridPane alignment="CENTER" hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="LEFT" minWidth="100" />
                    <ColumnConstraints halignment="LEFT" minWidth="200" />
                </columnConstraints>

                <Label text="Dirección De Origen:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField styleClass="form-input" fx:id="originField" promptText="Ej: calle 40 #20-41 Barrio juan" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Dirección De Destino:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField styleClass="form-input" fx:id="destinationField" promptText="Ej: calle 40 #20-41 Barrio juan" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Tipo De Envío:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <ChoiceBox styleClass="form-input" fx:id="choiceBoxTypeSending" GridPane.columnIndex="1" GridPane.rowIndex="2" >
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Envio Normal" />
                            <String fx:value="Envio con Seguro" />
                            <String fx:value="Envio con entrega prioritaria" />
                        </FXCollections>
                    </items>
                </ChoiceBox>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>

            <Button styleClass="primary-btn" text="Realizar Envío" />

            <HBox alignment="CENTER" spacing="15">
                <Hyperlink text="Volver" />

            </HBox>

        </VBox>
    </center>

</BorderPane>
