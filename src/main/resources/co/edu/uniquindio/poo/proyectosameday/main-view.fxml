                    <Button onAction="#onOpenQuote" styleClass="nav-btn" text="Cotizar Envíos" />
                </HBox>
            </HBox>
        </top>

        <center>
            <VBox alignment="CENTER" prefHeight="310.0" prefWidth="635.0" spacing="15" styleClass="main-section">
                <Label styleClass="title" text="Bienvenido a Same-Day" />
                <Label styleClass="subtitle" text="Tu plataforma de envíos urbanos rápidos y seguros." />
                <Button styleClass="primary-btn" text="Empieza Ahora" />
            </VBox>
        </center>

    </BorderPane>
