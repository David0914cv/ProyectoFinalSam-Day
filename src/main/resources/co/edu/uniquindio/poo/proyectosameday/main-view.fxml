<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.proyectosameday.viewController.PrimaryViewController">
        <top>
            <HBox spacing="20" styleClass="navbar">
                <Label styleClass="logo" text="Same-Day" />
                <HBox alignment="CENTER_RIGHT" spacing="15" HBox.hgrow="ALWAYS">
                    <Button onAction="#onOpenSignUp" styleClass="nav-btn" text="Registrarse" />
