<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="524.0" prefWidth="713.0" styleClass="contentForm" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.proyectosameday.viewController.RegisterUserViewController">

    <center>
        <VBox prefHeight="457.0" prefWidth="654.0" styleClass="form-box">

            <Label styleClass="form-title" text="Registro" />
            <VBox>
                <Label styleClass="lblForm" text="Correo electrónico:" />
                <TextField fx:id="emailField" promptText="Correo Electrónico" styleClass="form-input" />
                <Label styleClass="lblForm" text="Documento:" />
                <TextField fx:id="documentField" promptText="Documento" styleClass="form-input" />
                <Label styleClass="lblForm" text="Nombre Completo:" />
                <TextField fx:id="nameField" promptText="Nombre Completo" styleClass="form-input" />
                <Label styleClass="lblForm" text="Número de teléfono:" />
                <TextField fx:id="cellField" promptText="Número de teléfono" styleClass="form-input" />
                <Label styleClass="lblForm" text="Contraseña:" />
                <PasswordField fx:id="passwordField" promptText="Contraseña" styleClass="form-input" />

            </VBox>
            <Button onAction="#onSignUp" styleClass="primary-btn" text="Registrarse" />
            <Hyperlink onAction="#onOpenLogin" text="¿Ya tienes una cuenta? Iniciar Sesión" />

            <Hyperlink onAction="#onBack" text="Volver a la pantalla principal" />
        </VBox>
    </center>
</BorderPane>
